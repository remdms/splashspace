<nav class="navbar sticky-top">
  <div class="navbar__left">
    <%= link_to root_path, class: "icon-link" do %>
      <i class="fas fa-sliders-h"></i>
    <% end %>
  </div>

  <div class="navbar__center">
    <%= link_to "SPLASHSPACE", root_path, class: "nav-title" %>
  </div>

  <div class="navbar__right">
    <% if user_signed_in? && current_user.user.photo.key.present? %>
    <%= link_to user_path(current_user), class: "profile-link" do %>
      <%= cl_image_tag user.photo.key, class: "profile-picture" current_user.user.photo.key.present? %>
    <% else %>
      <%= image_tag("default-profile-picture.png", class: "profile-picture") %>
    <% end %>
  </div>
</nav>
